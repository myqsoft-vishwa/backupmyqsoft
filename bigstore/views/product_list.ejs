<% include templete/header %>
<link rel="stylesheet" href="/css/dataTables.bootstrap.min.css">
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
   <!-- Content Header (Page header) -->
   <section class="content-header">
      <h1>
         Product List        
      </h1>
      <% if(locals.success_messages){ %>
      <h4 class="msg" style="color: green;margin-top: -21px;margin-left: 201px;" "><%=success_messages%></h4>
      <% } %>
   </section>
   <!-- Main content -->
   <section class="content ">
      <div class="box ">
         <div class="box-header ">
            <a href="/admin/addProduct " class="btn btn-block btn-primary " style="width: 10%;float: right; ">Add Product</a>
         </div>
         <!-- /.box-header -->
         <div class="box-body ">
            <table id="example1 " class="table table-bordered table-striped ">
               <thead>
                  <tr>
                     <th>S.No</th>
                     <th>Category Name</th>
                     <th>Product Name</th>
                     <th>Price</th>
                     <th>Discount</th>
                     <th>Short Description</th>
                     <th>Long Description</th>
                     <th>Pic</th>
                     <th>Action</th>
                  </tr>
               </thead>
               <tbody>
                  <% for(var i=0; i<data.length; i++){ %>            
                  <tr>
                     <td><%=i+1 %></td>
                     <td><%=data[i].category_name %></td>
                     <td><%=data[i].name %></td>
                     <td><%=data[i].price %></td>
                     <td><%=data[i].discount %>%</td>
                     <td><%=data[i].short_description %></td>
                     <td><%=data[i].long_description %></td>
                     <td><img src="/img/product/<%= data[i].pic; %>"  style="width: 20%;" /></td>
                     <td>ghf</td>
                  </tr>
                  <% } %>
               </tbody>
            </table>
         </div>
         <!-- /.box-body -->
      </div>
   </section>
   <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<% include templete/footer %>
<script src="/js/jquery.dataTables.min.js "></script>
<script src="/js/dataTables.bootstrap.min.js "></script>
<script>
   $(function () {
     $('#example1').DataTable();
    
   })
</script>