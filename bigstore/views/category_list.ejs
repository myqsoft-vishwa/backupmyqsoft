<% include templete/header %>
<link rel="stylesheet" href="/css/dataTables.bootstrap.min.css">
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Category List        
      </h1>
     <% if(locals.success_messages){ %>
             <h4 class="msg" style="color: green;margin-top: -21px;margin-left: 201px;""><%=success_messages%></h4>
        <% } %>
    </section>

    <!-- Main content -->
    <section class="content">
       <div class="box">

            <div class="box-header">
               <a href="/admin/addCategory" class="btn btn-block btn-primary" style="width: 10%;float: right;">Add Category</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>S.No</th>
                  <th>Main Category</th>
                  <th>Category</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i=0; i<data.length; i++){ %>             
                <tr>
                 <td><%= i+1; %></td>
                  <td><%=data[i].parent_category; %></td>
                  <td><%= data[i].name; %></td>
                 <td> <a href="/admin/delete_category/<%= data[i]._id; %>" onclick="return confirm('Are you sure?')" style="font-size: 18px;"><i class="fa fa-trash"></i></a></td>
                </tr>
                 <%  } %>
                </tbody>
                
              </table>
            </div>
            <!-- /.box-body -->
          </div>
     
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <% include templete/footer %>
  <script src="/js/jquery.dataTables.min.js"></script>
<script src="/js/dataTables.bootstrap.min.js"></script>
<script>
  $(function () {
    $('#example1').DataTable()
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>
 
