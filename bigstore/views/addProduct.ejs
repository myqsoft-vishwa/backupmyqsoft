<% include templete/header %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
        Add  Product         
      </h1>
        </section>
        <!-- Main content -->
        <section class="content">
            <!-- Info boxes -->
            <!-- /.row -->
            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <div class="col-md-12">
                    <!-- TABLE: LATEST ORDERS -->
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Add Product</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <form action="/admin/add_product" method="post" enctype="multipart/form-data">
                            <div class="box-body">
                                
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Category Name</label>
                                    <select class="form-control" name="category_id">
                                        <option value=""> Please select</option>
                                         <% for(var i=0; i<category.length; i++){ %>   
                                        <option value="<%=category[i]._id %>"> <%=category[i].name %></option>
                                        <% } %>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Name</label>
                                    <input name="productName" id="exampleInputName" class="form-control" type="text" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Price</label>
                                    <input name="productPrice" id="exampleInputPrice" class="form-control" type="text" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Discount</label>
                                    <input name="productDiscount" id="exampleInputDiscount" class="form-control" type="text" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Short Description</label>
                                    <input name="short_desc" id="exampleInputSD" class="form-control" type="text" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Long Description</label>
                                    <textarea name="long_desc" id="exampleInputLD" class="form-control" type="text" required></textarea>
                                </div>
                                 <div class="form-group">
                                    <label for="exampleInputEmail1">Product Image</label>
                                    <input name="pic" id="exampleInputPI"  type="file" required>
                                </div>

                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                        <!-- /.box-footer -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <% include templete/footer %>