
<% include adminheader %>
 

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
   

    <!-- Main content -->
    <section class="content">
      <!-- Info boxes -->
     
      <!-- /.row -->

      

      <!-- Main row -->
      <div class="row">
        <!-- Left col -->
        <div class="col-md-12">
      

          <!-- TABLE: LATEST ORDERS -->
          <div class="box box-info">
            
            <div class="box-header with-border">
              <h3 class="box-title">Edit Profile</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form action="/admin/updateprofile" method="post">
			<input type="hidden" name="id" value="<%= data[0].id %>" />
              <div class="box-body">
			   <div class="form-group">
                  <label for="exampleInputEmail1">Username</label>
                  <input class="form-control" name="username" id="exampleInputEmail1" value="<%= data[0].username %>" placeholder="Enter email" type="text">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input class="form-control" name="email" id="exampleInputEmail1" value="<%= data[0].email %>" placeholder="Enter email" type="email">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input class="form-control" name="temp_password" id="exampleInputPassword1" value="<%= data[0].temp_password %>" placeholder="Password" type="password">
                </div>
               
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
         
           
            <!-- /.box-footer -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->

        
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  
<% include adminfooter %>