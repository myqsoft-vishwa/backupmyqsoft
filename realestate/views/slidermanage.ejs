<% include adminheader %>
 <link rel="stylesheet" href="/css/dataTables.bootstrap.min.css">
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
   

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
		 <% if(locals.success_messages){ %>
          <h4 style="color: green;margin-left: 35%;"><%=success_messages%></h4>
		   <% } %>
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Data Table With Full Features</h3>
			  <a href="/admin/addslide" class="btn btn-block btn-primary" style="width: 10%;float: right;">Add Slide Image</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Sr.No</th>
                  <th>Slide Image</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
				<% for(var i=0; i<data.length; i++){ %>
                <tr>
                  <td><%= i+1; %></td>
                  <td><img style="width: 200px;" src="/img/slider/<%= data[i].image_slide; %>"></img></td>
                  <td> <a href="/admin/deleteslide/<%= data[i].id; %>"><i class="fa fa-trash"></i></a></td>
                </tr>
               <% } %>

                </tbody>
                
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  

<% include adminfooter %>
<script src="/js/jquery.dataTables.min.js"></script>
<script src="/js/dataTables.bootstrap.min.js"></script>

<!-- page script -->
<script>
  $(function () {
    $('#example1').DataTable();
    
  })
</script>

